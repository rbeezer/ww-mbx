                        <macro>Test1.pl</macro>
                        <macro>Test2.pl</macro>
                    </macros>
                    -->

                    <setup>
                        <var name="$a">
                            <static>5</static>
                        </var>
                        <var name="$b">
                            <static>8</static>
                        </var>
                        <var name="$c">
                            <static>13</static>
                        </var>

                        <pg-code>
                            $a = Compute(random(1, 9, 1));
                            $b = Compute(random(1, 9, 1));
                            $c = $a + $b;
                        </pg-code>
